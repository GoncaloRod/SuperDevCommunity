@using System.Data.Entity.Core.Metadata.Edm
@using SuperDevCommunity.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!-- Page Title -->
    <title>@ViewBag.Title - super dev; community</title>
    <!-- Favicon -->
    <link rel="icon" href="~/favicon.png" type="image/x-icon" />
    <!-- Bootstrap 4 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
    <script>window.jQuery || document.write('<script src="/js/jquery-1.12.4.min.js">\x3C/script>')</script>
    <!-- Font Awsome -->
    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">
    <!-- Emoji CSS -->
    <link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">
    <!-- Custom Style -->
    <link href="~/Content/custom.css" rel="stylesheet" />
</head>
    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/Home"><span class="logo">super <span class="logo-blue">dev</span>; <span class="logo-small">community</span></span></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active"><a class="nav-link active" href="/home">Home</a></li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (Request.IsAuthenticated)
                        {
                            <li class="nav-item"><img class="rounded-circle" src="/img/profile_pics/@Html.GetUserWithId(int.Parse(User.Identity.Name)).profilePic" style="width: 40px;"></li>
                            <li class="nav-item active"><a class="nav-link active" href="/profile">@Html.GetUserWithId(int.Parse(User.Identity.Name)).username</a></li>
                            <li class="nav-item active"><a class="nav-link active" href="/logout"><i class="fas fa-sign-out-alt"></i></a></li>
                        }
                        else
                        {
                            <li class="nav-item active"><a class="nav-link active" href="/login">Login</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container" style="margin-top: 25px;">
            <div class="row justify-content-center">
                <!-- Page Content -->
                <div class="col-xl-9 col-lg-9 col-md-9 col-sm-11 col-11">
                    @RenderBody()
                </div>
                <!-- Top Posts -->
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-11 col-11">
                    <!-- TODO: Top Posts -->
                </div>
            </div>
        </div>

        @RenderSection("modals", required: false)

        @RenderSection("srcipts", required: false)
    </body>
</html>
