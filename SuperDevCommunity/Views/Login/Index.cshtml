
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MainApp.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-5 col-md-5 col-sm-11 col-11">
        <div class="text-center">
            <h2>Login</h2>
        </div>
        <hr>
        <!-- Login Form -->
        <form action="/login" method="POST" style="margin-top: 10px;">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" placeholder="Email" id="email" name="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" placeholder="Password" id="password" name="password">
            </div>

            <button class="btn btn-primary btn-sm btn-block" type="submit">Login</button>
        </form>
        <a class="btn btn-outline-primary btn-sm btn-block" href="/register" style="margin-top: 10px;">Register</a>
    </div>
</div>